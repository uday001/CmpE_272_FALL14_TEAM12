<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/pbooks/save">
                <table cellpadding="11">
                <tr>
                    <td class="label">Book Id</td><td>: <input type="text" name="bookId"></td>
                 </tr>
                <tr>
                    <td class="label">Name of the book</td><td>: <input type="text" name="bookName"></td>
                 </tr>
