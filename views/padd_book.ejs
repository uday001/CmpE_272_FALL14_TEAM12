                    <td class="label" valign="top">Book Description</td><td valign="top">: <textarea name="bookDescription" required cols="100" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label">Number of the books</td><td>: <input type="text" name="numberOfBooks"></td>
                 </tr>
                 <tr>
                    <td class="label">Author of the book</td><td>: <input type="text" name="author"></td>
                 </tr>
                <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd_book()">
